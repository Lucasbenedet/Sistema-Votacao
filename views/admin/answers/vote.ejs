<%- include ("../../partials/header.ejs"); %>
<body>
    <%- include ("../../partials/nav.ejs"); %>
    <div class="container">
        <div class="card" id="marg">
            <div class="card-header">
                <form method="POST" action="/answers/save">
                    <h3><%= polls.title %></h3>
                    <br>
                        <% answers.forEach(answer =>{%>
                            <%if(answer.vote == polls.option1){%>
                                <%cont1 = cont1 + 1%>
                            <%}else if(answer.vote == polls.option2){%>
                                <%cont2 = cont2 + 1%>
                            <%}else if(answer.vote == polls.option3){%>
                                <%cont3 = cont3 + 1%>
                            <%}%>
                        <%})%>
                    <% if(polls.end <= date){%>
                    <ul>
                        <li><%= polls.option1 %> - Votos: <%=cont1%></li>
                        <li><%= polls.option2 %> - Votos: <%=cont2%></li>
                        <li><%= polls.option3 %> - Votos: <%=cont3%></li>
                    </ul>
                        <span>Votação encerrada</span>
                        <hr>
                    <%}else{%>
                        <input id="option1" type="radio" name="vote" value="<%= polls.option1 %>" required>
                        <label for="option1"><%= polls.option1 %> - Votos: <%=cont1%></label>
                        <br>
                        <input id="option2" type="radio" name="vote" value="<%= polls.option2 %>" required>
                        <label for="option2"><%= polls.option2 %> - Votos: <%=cont2%></label>
                        <br>
                        <input id="option3" type="radio" name="vote" value="<%= polls.option3 %>" required>
                        <label for="option3"><%= polls.option3 %> - Votos: <%=cont3%></label>
                        <br>
    
                        <span>Iniciada em <%= polls.init %> </span>
                        <br>
                        <span>Será encerrada em <%= polls.end %> </span>
                        <br>
                        <br>
                        <input type="hidden" name="pollId" value="<%= polls.id %>">
                        <button class="btn btn-success">Votar</button>
                    <%}%>
                    <%cont1 = 0%>
                    <%cont2 = 0%>
                    <%cont3 = 0%>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include ("../../partials/footer.ejs"); %>
